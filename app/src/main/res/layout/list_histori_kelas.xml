<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:id="@+id/lay_nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_NomorStruk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:text="No Struk"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/gofit_color"/>
            <TextView
                android:id="@+id/txt_namaKelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Nama Kelas"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:textColor="@color/gofit_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_tanggalBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Tanggal Booking Kelas"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="@color/gofit_color"/>
            <TextView
                android:id="@+id/txt_HariTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Hari/Tanggal Kelas"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="@color/gofit_color"/>

            <TextView
                android:id="@+id/txt_jenisBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Jenis Booking Kelas"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="@color/gofit_color"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Status Presensi Kelas"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="@color/gofit_color"/>

            <TextView
                android:id="@+id/txt_jamPresensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Jam Presensi Kelas"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="@color/gofit_color"/>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>